rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Secure defaults - deny all access by default
    // These rules will be updated as the application is developed
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Future rules will be added here for:
    // - User profile images
    // - Marshmallow attachments
  }
}
