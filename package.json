{
  "name": "ericas-marshmallows",
  "version": "1.0.0",
  "description": "Erica's Marshmallows - A digital marshmallow sharing app",
  "private": true,
  "workspaces": [
    "mobile",
    "functions",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install",
    "clean": "rm -rf node_modules mobile/node_modules functions/node_modules shared/node_modules",
